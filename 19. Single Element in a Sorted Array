int singleNonDuplicate(vector<int> &arr) {
  int i, j;
  for (i = arr.size() - 1, j = 0; j < arr.size() / 2 || i >= arr.size() / 2;
       j++, i--) {
    if (arr[j] != arr[j + 1] && arr[j] != arr[j - 1]) {
      return arr[j];
    }

    if (arr[i] != arr[i + 1] && arr[i] != arr[i - 1]) {
      return arr[i];
    }
  }
  return arr[arr.size() - 1];
}
