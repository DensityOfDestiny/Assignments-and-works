#include <bits/stdc++.h> 
long long int sumOrProduct(long long int n, long long int q)
{
	int i;
	long long int sum=0;
	long long int product=1;
	if(q==1){
		for(i=1;i<=n;i++){
			sum+=i;
		}
		return sum;
	}
    else if(q==2){
		for(i=1;i<=n;i++){
			product*=i;
			product=product%1000000007;
		}
		return product;
	}
}
